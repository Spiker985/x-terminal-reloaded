{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "xterm",
      "matchPackageNames": [
        "/^xterm/"
      ]
    },
    {
      "groupName": "eslint",
      "matchPackageNames": [
        "/^eslint/"
      ]
    },
    {
      "groupName": "stylelint",
      "matchPackageNames": [
        "/^stylelint/"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "commitMessageTopic": "devDependency {{depName}}"
    }
  ],
  "rangeStrategy": "bump"
}
